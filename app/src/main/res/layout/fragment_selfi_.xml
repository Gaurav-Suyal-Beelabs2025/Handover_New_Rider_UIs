<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Selfi_Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_black"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_we_would_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_regular"
            android:gravity="center"
            android:text="We would like to \nsee you!"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="32sp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_arrow_back" />

        <ImageView
            android:id="@+id/img_setimage"
            android:layout_width="320dp"
            android:layout_height="361dp"
            android:src="@drawable/imageview_selfi"
            android:layout_marginTop="@dimen/_19sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_we_would_like"/>


        <TextView
            android:id="@+id/txt_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0F6FB5"
            android:background="@drawable/got_it_button"
            android:fontFamily="@font/sora_bold"
            android:text="Click"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_25sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_35sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_setimage"
            app:layout_constraintStart_toStartOf="@+id/img_setimage"
            app:layout_constraintTop_toBottomOf="@id/img_setimage" />


        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/got_it_button"
            android:text="Submit"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="700"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/sora_bold"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/txt_click"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>