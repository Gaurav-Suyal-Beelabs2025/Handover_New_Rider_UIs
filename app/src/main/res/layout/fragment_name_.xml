<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
   
        <variable
            name="vm"
            type="com.suyal.handovernewrideruis.Name_Fragment" />
        
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Name_Fragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/edit_text_ridername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#FFEFE9"
                android:hint="Rider name"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:paddingVertical="@dimen/_12sdp"
                android:textSize="16sp"
                android:textFontWeight="700"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/sora_semibold"
                android:paddingStart="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:background="@drawable/got_it_button"
                android:fontFamily="@font/sora_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@id/edit_text_ridername" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
 
</layout>