<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment_earning">

    <ImageView
        android:id="@+id/ern_backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <TextView
        android:id="@+id/txt_ern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/sora_bold"
        android:text="Earnings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ern_backbtn"
        app:layout_constraintStart_toEndOf="@+id/ern_backbtn"
        app:layout_constraintTop_toTopOf="@+id/ern_backbtn" />


    <RadioGroup
        android:id="@+id/ern_radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txt_ern">


        <RadioButton
            android:id="@+id/radioButtonOption11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_radio_btn"
            android:backgroundTint="@color/orange"
            android:button="@android:color/transparent"
            android:fontFamily="@font/sora_medium"
            android:paddingVertical="@dimen/_15sdp"
            android:text="Today"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButtonOption22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_radio_btn"
            android:backgroundTint="#F3F3F3"
            android:button="@android:color/transparent"
            android:fontFamily="@font/sora_medium"
            android:paddingVertical="@dimen/_15sdp"
            android:text="history"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#686868"
            android:textSize="16sp" />


    </RadioGroup>


    <View
        android:id="@+id/ern_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@+id/ern_radioGroup1" />
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nested"
    app:layout_constraintTop_toBottomOf="@id/ern_view1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ern_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_radio_btn"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/sora_bold"
                android:text="55"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sora_regular"
                android:text="delivered"
                android:textColor="@color/broun"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/drawable_radio_btn"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/sora_bold"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sora_regular"
                android:text="skipped"
                android:textColor="@color/broun"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/drawable_radio_btn"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/sora_bold"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sora_regular"
                android:text="cancelled"
                android:textColor="@color/broun"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ern_moneyicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="@+id/ern_linear_layout"
        app:layout_constraintTop_toBottomOf="@+id/ern_linear_layout"
        app:srcCompat="@drawable/money_icon" />

    <TextView
        android:id="@+id/ern_rupyatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/sora_bold"
        android:text="â‚¹24.63"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ern_totlern"
        app:layout_constraintStart_toEndOf="@+id/ern_moneyicon"
        app:layout_constraintTop_toTopOf="@+id/ern_moneyicon" />


    <TextView
        android:id="@+id/ern_totlern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_regular"
        android:text="total_earning"
        android:textColor="@color/broun"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ern_moneyicon"
        app:layout_constraintStart_toStartOf="@+id/ern_rupyatxt" />

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/ern_cons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/drawable_radies"
            android:paddingVertical="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ern_totlern">


            <ImageView
                android:id="@+id/ern_ratecardicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ratecard_icon" />

            <TextView
                android:id="@+id/ern_ratetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/sora_regular"
                android:text="rate card"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/ern_ratecardicon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ern_checkpayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/sora_regular"
                android:text="check your payment structure"
                android:textColor="@color/broun"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ern_ratecardicon"
                app:layout_constraintTop_toBottomOf="@+id/ern_ratetxt" />

            <ImageView
                android:id="@+id/ern_nextbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/next_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
        android:id="@+id/ern_txtguidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:fontFamily="@font/sora_regular"
        android:text="guidelines for doing orders"
        android:textColor="@color/broun"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ern_cons2"
        app:layout_constraintTop_toBottomOf="@+id/ern_cons2" />

    <TextView
        android:id="@+id/ern_txtlearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/sora_regular"
        android:text="Learn More"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ern_txtguidline"
        app:layout_constraintStart_toEndOf="@+id/ern_txtguidline"
        app:layout_constraintTop_toTopOf="@+id/ern_txtguidline" />

    <View
        android:layout_width="@dimen/_60sdp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/ern_txtlearn"
        app:layout_constraintStart_toStartOf="@+id/ern_txtlearn"
        app:layout_constraintTop_toBottomOf="@+id/ern_txtlearn" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ern_cons3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/drabale_incentives_bonus"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ern_txtguidline">


        <ImageView
            android:id="@+id/ern_insetiveicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/incentive_icon" />

        <TextView
            android:id="@+id/ern_incentivetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/sora_regular"
            android:text="Incentives &amp; Bonus"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ern_insetiveicon"
            app:layout_constraintStart_toEndOf="@+id/ern_insetiveicon"
            app:layout_constraintTop_toTopOf="@+id/ern_insetiveicon" />

        <TextView
            android:id="@+id/enr_moneytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:fontFamily="@font/sora_regular"
            android:text="â‚¹0.0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ern_incentivetxt"
            app:layout_constraintStart_toEndOf="@+id/ern_incentivetxt"
            app:layout_constraintTop_toTopOf="@+id/ern_incentivetxt" />

        <ImageView
            android:id="@+id/ern_backbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@+id/enr_moneytxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enr_moneytxt"
            app:srcCompat="@drawable/next_btn"
            app:tint="#1173BA" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/ern_tran_histxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/sora_bold"
        android:text="Transaction History"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/ern_cons3"
        app:layout_constraintTop_toBottomOf="@+id/ern_cons3" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ern_cons4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/drawable_filter"
        android:paddingHorizontal="@dimen/_11sdp"
        android:paddingVertical="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ern_tran_histxt">

        <ImageView
            android:id="@+id/ern_filtericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/ern_filtertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/sora_regular"
            android:text="filter"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/ern_filtericon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ern_filtericon"
            app:layout_constraintTop_toTopOf="@+id/ern_filtericon" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ern_cons5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:background="@drawable/drawable_filter"
        android:paddingHorizontal="@dimen/_11sdp"
        android:paddingVertical="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="@+id/ern_cons4"
        app:layout_constraintStart_toEndOf="@+id/ern_cons4"
        app:layout_constraintTop_toTopOf="@+id/ern_cons4">


        <TextView
            android:id="@+id/ern_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_regular"
            android:text="All Transaction"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ern_closeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ern_transaction"
            app:layout_constraintStart_toEndOf="@+id/ern_transaction"
            app:layout_constraintTop_toTopOf="@+id/ern_transaction" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_collention_fare"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nested" />

        </androidx.constraintlayout.widget.ConstraintLayout>

