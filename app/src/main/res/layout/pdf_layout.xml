<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_card_drawable"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_handover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hanover_pic_drawable"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_ic"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verified"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/sora_regular"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ic_logo"
                app:layout_constraintBottom_toBottomOf="@id/ic_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_verify"
                android:layout_marginEnd="@dimen/_3sdp"
                app:layout_constraintEnd_toStartOf="@id/txt_verified"
                app:layout_constraintBottom_toBottomOf="@id/txt_verified"
                app:layout_constraintTop_toTopOf="@id/txt_verified"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/ic_man_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ellipse_5_png"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_handover" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rajeev_ranjan"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textFontWeight="600"
            android:textColor="@color/white"
            android:fontFamily="@font/sora_semibold"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/ic_man_pic"
            app:layout_constraintStart_toEndOf="@id/ic_man_pic"/>

        <ImageView
            android:id="@+id/img_scooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_scooter"
            app:tint="@color/white"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="@id/txt_name"/>

        <TextView
            android:id="@+id/txt_bike_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bike_rider"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/sora_regular"
            app:layout_constraintTop_toTopOf="@id/img_scooter"
            app:layout_constraintStart_toEndOf="@id/img_scooter"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:backgroundTint="#FF9169"
            android:layerType="software"
            android:background="@drawable/dotted_drawable"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/ic_man_pic"/>


        <TextView
            android:id="@+id/txt_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_no"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textFontWeight="400"
            android:textColor="#FFC5AF"
            android:fontFamily="@font/sora_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_9932586952"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/sora_semibold"
            app:layout_constraintTop_toBottomOf="@id/txt_mobile_no"
            app:layout_constraintStart_toStartOf="@id/txt_mobile_no"/>

        <TextView
            android:id="@+id/txt_Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/services"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textFontWeight="400"
            android:textColor="#FFC5AF"
            android:fontFamily="@font/sora_regular"
            android:layout_marginEnd="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_mobile_no"/>

        <TextView
            android:id="@+id/txt_instant_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instant_delivery"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/sora_semibold"
            app:layout_constraintTop_toTopOf="@id/mobile_number"
            app:layout_constraintStart_toStartOf="@id/txt_Services"/>


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layerType="software"
            android:background="@drawable/dotted_drawable"
            android:backgroundTint="#FF9169"
            android:layout_marginTop="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@id/mobile_number"/>

        <TextView
            android:id="@+id/txt_license_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_number"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textFontWeight="400"
            android:textColor="#FFC5AF"
            android:fontFamily="@font/sora_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_13sdp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/license_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/sora_semibold"
            android:text="@string/up1620200015886"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/layout_update_new"
            app:layout_constraintStart_toStartOf="@id/txt_license_number"
            app:layout_constraintTop_toBottomOf="@id/txt_license_number" />


        <LinearLayout
            android:id="@+id/layout_update_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#FF8558"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_9sdp"
            android:background="@drawable/share_button_drawable"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_license_number"
            app:layout_constraintBottom_toBottomOf="@id/license_number">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/refresh"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_new"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_3sdp"
                android:textFontWeight="400"
                android:textColor="@color/white"
                android:fontFamily="@font/sora_regular"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/share_button_drawable"
            app:layout_constraintTop_toBottomOf="@id/license_number">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:layout_marginStart="@dimen/_7sdp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/sora_regular"/>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>